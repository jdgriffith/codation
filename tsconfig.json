{
    "compilerOptions": {
        "target": "es2019",
        "module": "commonjs",
        "moduleResolution": "node",
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "rootDir": "src",
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "incremental": true
    },
    "include": [
        "src/**/*", "tsconfig.build.json", "test"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]   
}